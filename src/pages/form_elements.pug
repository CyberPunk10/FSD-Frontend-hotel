include ../components/section-pages/section-pages.pug
include ../components/form-element-title/form-element-title.pug
include ../components/text-field/text-field.pug

mixin text-field-or-dropdown(options)
  -
    var b = "text-field-or-dropdown"
    var state = options.state || '_hover-focus' || ''
    var placeholder = options.placeholder || 'Email'
    var value = options.value || ''
    var focus = options.autofocus ? autofocus : ''  //- ""
    var width = options.width ? `form-element-title__flex-titles_width-${options.width}` : ''   //- "sm"


  div(class=`b form-element-title__flex-titles ${width}`)
    input(type="text" !=focus class=`${b}__input-or-btn ${b}__input-or-btn${hoverFocusClassName}` value=value placeholder=placeholder)


+section-pages("Form Elements")
  .content-form-elements
    
    hr
    br

    +form-element-title({state: "default", width: "sm"})
      +text-field({placeholder: "Email", autofocus: false})
    
    +form-element-title({state: "hover-focus"})
      +text-field({value: "This is pretty awesome", autofocus: true})
    
    br
    br
    hr
    br

    +form-element-title({state: "default"})
      +text-field-or-dropdown({})
      //- input(type="text" class=`${b}__input-or-btn ${b}__input-or-btn${hoverFocusClassName}` placeholder= placeholder)

    +form-element-title({state: "default"})
      +text-field-or-dropdown({})
    
    +form-element-title({state: "default"})
      +text-field-or-dropdown({state: "hover/focus", placeholder: "This is pretty awesome"})

    .text-field-or-dropdown
      .text-field-or-dropdown__flex-titles
        h3 dropdown
        p.text-field-or-dropdown__state default
      button.text-field-or-dropdown__input-or-btn.text-field-or-dropdown__input-or-btn_isClickable Сколько гостей
      .text-field-or-dropdown__dropdown-content
        a(href="#" class="text-field-or-dropdown__link") Link 1
        a(href="#" class="text-field-or-dropdown__link") Link 2
        a(href="#" class="text-field-or-dropdown__link") Link 3

    +text-field-or-dropdown({title: "Masked text Field"})

    include ../components/dropdown/dropdown.pug

